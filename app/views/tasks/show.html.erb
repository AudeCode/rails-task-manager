<div class="container p-3 bg-light">
  <h2><%= @task.title %></h2>
  <p>Details: <%= @task.details %></p>
    <div class="d-flex">
      <% if @task.completed == true %>
        <i class="fa-regular fa-square-check"></i>
        <p class="p-3"> Task is complete</p>

      <% else %>
        <i class="fa-regular fa-square "></i>
        <p class="p-3"> Task is not completed yet</p>

      <% end %>
    </div>
    <div>
      <%= link_to "✏️ Edit", edit_task_path(@task), class: "btn ps-0" %>
      <%= link_to "Delete", destroy_task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
</div>
<div class="container p-3 bg-light mb-2">
  <%= link_to "Back to list", tasks_path %>
</div>
